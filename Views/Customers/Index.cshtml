@model IEnumerable<MovieRental.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<table border="2">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Membership Type</th>
        </tr>
       

            @foreach (var customer in Model)
            {
    <tr>


        @*//<td>@Html.ActionLink(customer.Name, "Details", customer.Id)</td>*@
        @*<td>@Html.ActionLink(customer.Name, "Details", "Customers", new { Id = customer.Id })</td>*@
        <td>@Html.ActionLink(customer.Name, "Details", "Customers", new { customerId= customer.Id },null)</td>
        <td>@customer.MembershipType.Name</td>

    </tr>
            }
         
    </thead>
</table>
